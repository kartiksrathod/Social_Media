# MongoDB Connection
MONGO_URL=mongodb://localhost:27017/socialvibe
DB_NAME=socialvibe

# JWT Configuration (REQUIRED - Change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CSRF Protection (Optional - Currently disabled in code)
CSRF_SECRET=your-csrf-secret-key-change-in-production

# Cloudinary Configuration (Required for image/video uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration
PORT=8001
CORS_ORIGINS=*
